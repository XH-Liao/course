@model Register
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1 style="color: #b85cd6;">Create New User Account</h1>
        <form asp-controller="Security" asp-action="Register" method="post">
            <table class="table">
                <tr>
                    <td class="right"><label asp-for="UserName"></label></td>
                    <td class="left"><input type="text" asp-for="UserName" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="Password"></label></td>
                    <td class="left"><input type="password" asp-for="Password" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="ConfirmPassword"></label></td>
                    <td class="left"><input type="password" asp-for="ConfirmPassword" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="Email"></label></td>
                    <td class="left"><input type="text" asp-for="Email" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="FullName"></label></td>
                    <td class="left"><input type="text" asp-for="FullName" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="Birthday"></label></td>
                    <td class="left"><input type="date" asp-for="Birthday" class="form-control" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" class="btn btn-primary" style="background-color: #b85cd6; border-color: #b85cd6 ;">Create</button>
                    </td>
                </tr>
            </table>
            <div asp-validation-summary="All" class="message text-danger"></div>
        </form>
    </div>
</div>
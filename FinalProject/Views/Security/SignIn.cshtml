@model SignIn
@{
    ViewData["Title"] = "SignIn";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 style="color: #b85cd6; ">Sign In</h1>
        <form asp-controller="Security" asp-action="SignIn" method="post">
            <table class="table">
                <tr>
                    <td class="right"><label asp-for="UserName"></label></td>
                    <td class="left"><input type="text" asp-for="UserName" class="form-control" /></td>
                </tr>
                <tr>
                    <td class="right"><label asp-for="Password"></label></td>
                    <td class="left"><input type="password" asp-for="Password" class="form-control" /></td>
                </tr>
                <tr>
                    <td style="text-align:center;vertical-align:middle;">
                        <input type="checkbox" asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary" style="background-color: #b85cd6; border-color: #b85cd6; ">Sign In</button>
                    </td>
                </tr>
            </table>
            <div asp-validation-summary="All" class="message text-danger"></div>
        </form>
    </div>
</div>